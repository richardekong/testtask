<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/light_border"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/userDetailLeft"
        android:text="TextView"
        android:layout_marginTop="@dimen/userDetailTop"
        android:textSize="@dimen/userDetail_textsize"/>

    <TextView
        android:id="@+id/emailDetail"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/marginTop"
        android:layout_marginStart="@dimen/userDetailLeft"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="@dimen/userDetail_textsize"/>
    <TextView
        android:id="@+id/phoneDetail"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/userDetailLeft"
        android:layout_marginTop="@dimen/marginTop"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="@dimen/userDetail_textsize"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/light_border"
        android:orientation="horizontal">

        <WebView
            android:id="@+id/website"
            android:layout_width="196dp"
            android:layout_height="match_parent" />

       <include layout="@layout/activity_maps"
           android:id="@+id/map"
           android:layout_width="196dp"
           android:layout_height="match_parent"/>

    </LinearLayout>
</LinearLayout>